<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.orsomob.coordinates.activitys.MainActivity">


    <com.orsomob.coordinates.GraphView
        android:id="@+id/gf_main"
        android:layout_width="372dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/fr_main_insert_remove"/>

    <fragment
        android:id="@+id/fr_main_insert_remove"
        android:name="com.orsomob.coordinates.fragments.InsertFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_insert"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/gf_main"/>

</RelativeLayout>
